- bunny_id = "bunny_#{id}_id"
- weapon_id = "weapon_#{id}_id"
.fighter-selection-wrapper.rpgui-container.framed
  h3 = "Bunny #{id}"
  = fight_form.input_field bunny_id,
                           collection: bunnies,
                           label_method: :name,
                           value_method: :id,
                           class: "rpgui-list",
                           size: 7,
                           include_blank: false
  h3 Weapon
  - if weapons.length.positive?
    = fight_form.input_field weapon_id,
                             collection: weapons,
                             label_method: :name,
                             value_method: :id,
                             class: 'rpgui-list',
                             size: 3
  - else
    p No weapon available
