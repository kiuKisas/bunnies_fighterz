.box.space-between
  = link_to "Back", :back, class: "button rpgui-button"
  h1.margin-auto = bunny.name
  = link_to "edit", edit_bunny_path(bunny), class: "button rpgui-button"
br
br
= simple_form_for :bunny_stat do |stat_form|
  div.attr-stat-wrapper
    = render 'shared/attr_stat',
      attr: 'life',
      color: StatColors::LIFE,
      stat_form: stat_form,
      attr_value: bunny_stat.life
    = render 'shared/attr_stat',
      attr: 'attack',
      color: StatColors::ATTACK,
      stat_form: stat_form,
      attr_value: bunny_stat.attack
    = render 'shared/attr_stat',
      attr: 'defense',
      color: StatColors::DEFENSE,
      stat_form: stat_form,
      attr_value: bunny_stat.defense
    = render 'shared/attr_stat',
      attr: 'stamina',
      color: StatColors::STAMINA,
      stat_form: stat_form,
      attr_value: bunny_stat.stamina
    = render 'shared/attr_stat',
      attr: 'luck',
      color: StatColors::LUCK,
      stat_form: stat_form,
      attr_value: bunny_stat.luck
br
