= simple_form_for bunny, as: :bunny  do |bunny_form|
 = bunny_form.input :name
 h2#stat-manager-title Stat Manager
 div.rpgui-icon.empty-slot
  p#stock-view = stock
 = bunny_form.simple_fields_for :bunny_stat, bunny.bunny_stat do |stat_form|
   = render 'shared/edit_attr_stat', attr: 'life', color: 'blue', stat_form: stat_form, bunny: bunny
   = render 'shared/edit_attr_stat', attr: 'attack', color: 'blue', stat_form: stat_form, bunny: bunny
   = render 'shared/edit_attr_stat', attr: 'defense', color: 'blue', stat_form: stat_form, bunny: bunny
   = render 'shared/edit_attr_stat', attr: 'stamina', color: 'blue', stat_form: stat_form, bunny: bunny
   = render 'shared/edit_attr_stat', attr: 'luck', color: 'blue', stat_form: stat_form, bunny: bunny

 = bunny_form.button :button, class: 'rpgui-button', type: :submit
= simple_form_for :stock do |stock_form|
 = stock_form.hidden_field :max_stock, id: 'max-stock', disabled: true, value: stock || @max_stock
 = stock_form.hidden_field :stock, id: :stock, disabled: true, hidden: true, value: stock
